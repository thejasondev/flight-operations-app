{
  "name": "flight-operations-app",
  "type": "module",
  "version": "0.0.1",
  "description": "Aplicación web para coordinadores de operaciones aéreas",
  "author": "",
  "license": "MIT",
  "scripts": {
    "dev": "astro dev",
    "build": "astro check && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx,.astro",
    "lint:fix": "eslint src --ext .js,.jsx,.ts,.tsx,.astro --fix",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,astro,css}\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx,ts,tsx,astro,css}\"",
    "type-check": "astro check",
    "clean": "rimraf dist .astro node_modules",
    "build:production": "pnpm clean && pnpm type-check && pnpm lint && pnpm build",
    "analyze": "astro build --analyze"
  },
  "dependencies": {
    "@astrojs/react": "^4.3.0",
    "@types/react": "^19.1.7",
    "@types/react-datepicker": "^7.0.0",
    "@types/react-dom": "^19.1.6",
    "astro": "^5.9.2",
    "date-fns": "^4.1.0",
    "react": "^19.1.0",
    "react-datepicker": "^8.4.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/tailwind": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.34.0",
    "@typescript-eslint/parser": "^8.34.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-astro": "^1.3.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "postcss": "^8.5.4",
    "prettier": "^3.5.3",
    "prettier-plugin-astro": "^0.14.1",
    "rimraf": "^6.0.1",
    "tailwindcss": "3.3.5"
  }
}
